extends layout

block content
    div(id="top-section")
        span(id="CouplingTitleBlock")
            div(class="title")= title
            p Welcome to #{title}.

            a(type="button" class="super pink button" ng-click="spin()") Spin!
        span(class="view-container")
            div(ng-view id="main-view" class="view-frame" autoscroll)
    div(ng-cloak class="player-roster")
        div(class="roster-header" ng-click="showOrHidePlayers()") Players:
        div(class="player-listing" ng-hide="showPlayers")
            span(ng-repeat="player in data.players" class="player" ng-class="{disabled:deselectionMap[player._id]}" ng-click="flipSelection(player)")
                img(ng-src="{{player | gravatarUrl:{size:100} }}" class="player-icon" width="100" height="100")
                h4(ng-click="viewPlayer(player._id, $event)") {{player.name}}
        div
            a(type="button" class="large orange button" href="/player/new/") Add a new player!